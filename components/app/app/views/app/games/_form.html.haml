= form_for(@game) do |f|
  - if @game.errors.any?
    #error_explanation
      %h2
        = pluralize(@game.errors.count, "error")
        prohibited this game from being saved:
      %ul
        - @game.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :date
    %br/
    = f.datetime_select :date
  .field
    = f.label :location
    %br/
    = f.text_field :location
  .field
    = f.label :first_team_id
    %br/
    = f.number_field :first_team_id
  .field
    = f.label :second_team_id
    %br/
    = f.number_field :second_team_id
  .field
    = f.label :winning_team
    %br/
    = f.number_field :winning_team
  .field
    = f.label :first_team_score
    %br/
    = f.number_field :first_team_score
  .field
    = f.label :second_team_score
    %br/
    = f.number_field :second_team_score
  .actions
    = f.submit
